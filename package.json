{
  "name": "mail-sync",
  "version": "1.0.0",
  "description": "Realtime email sync via imap idle or noop fallback",
  "main": "index.js",
  "scripts": {
    "test": "mocha",
    "dev:server": "PORT=5000 DEBUG=mail* nodemon server.js",
    "dev:store": "PORT=3030 DEBUG=mail* nodemon store/server.js",
    "dev:mqtt:server": "DEBUG=mail* MQTT_HOST='mqtt://localhost:1883' nodemon mqtt/server/server.js",
    "dev:mqtt:client": "DEBUG=mail* MQTT_HOST='mqtt://localhost:1883' nodemon mqtt/client/client.js",
    "dev:mqtt:ai": "DEBUG=mail* MQTT_HOST='mqtt://localhost:1883' nodemon mqtt/client/ai.js",
    "debug:mqtt:server": "DEBUG=mail* MQTT_HOST='mqtt://localhost:1883' nodemon -- --inspect mqtt/server/server.js",
    "debug:mqtt:client": "DEBUG=mail* MQTT_HOST='mqtt://localhost:1883' nodemon -- --inspect mqtt/client/client.js",
    "debug:mqtt:ai": "DEBUG=mail* MQTT_HOST='mqtt://localhost:1883' nodemon -- --inspect mqtt/client/ai.js",
    "server": "node server.js",
    "store": "node store/server.js",
    "mqtt:server": "node mqtt/server/server.js",
    "mqtt:client": "node mqtt/client/client.js",
    "pm2:mail-store": "PORT=3030 pm2 start store/server.js --name mail-store",
    "pm2:mqtt:server": "pm2 start mqtt/server/server.js --name mail:mqtt:server"
  },
  "keywords": [
    "imap",
    "email",
    "mail",
    "sync",
    "listener",
    "push"
  ],
  "author": "gabe@fijiwebdesign.com",
  "license": "ISC",
  "dependencies": {
    "async": "^2.1.4",
    "bluebird": "^3.4.7",
    "body-parser": "^1.18.2",
    "concat-stream": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "debug": "^3.1.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "hat": "^0.0.3",
    "imap": "^0.8.19",
    "js-data": "^3.0.2",
    "js-data-rethinkdb": "^3.0.0",
    "jsonwebtoken": "^8.2.1",
    "mailparser": "^0.6.1",
    "morgan": "^1.9.0",
    "mqtt": "^2.17.0",
    "multer": "^1.3.0",
    "node-persist": "^2.0.7",
    "openurl": "^1.1.1",
    "passport": "^0.4.0",
    "passport-google-oauth": "^1.0.0",
    "passport-oauth2-refresh": "^1.0.0",
    "pump": "^3.0.0",
    "rethinkdb": "^2.3.3",
    "rethinkdbdash": "^2.3.31",
    "xoauth2": "^1.2.0"
  }
}
